{
	"name": "minesweeper-ts",
	"version": "0.1.0",
	"private": true,
	"proxy": "http://localhost:5000/",
	"dependencies": {
		"@material-ui/core": "^4.11.0",
		"@material-ui/icons": "^4.9.1",
		"@testing-library/jest-dom": "^4.2.4",
		"@testing-library/react": "^9.3.2",
		"@testing-library/user-event": "^7.1.2",
		"@types/jest": "^24.0.0",
		"@types/node": "^12.0.0",
		"avataaars": "^1.2.1",
		"concurrently": "^5.3.0",
		"express": "^4.17.1",
		"immer": "^7.0.7",
		"mongoose": "^5.9.28",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-redux": "^7.2.1",
		"react-scripts": "3.4.1",
		"redux": "^4.0.5",
