		"ts-node-dev": "^1.0.0-pre.56",
		"typescript": "~3.7.2",
		"uuid": "^8.3.0"
	},
	"scripts": {
		"start:db": "docker pull mongo && docker run --name minesweeper_sb -d -p 127.0.0.1:27017:27017 mongo",
		"stop:db": "docker rm -f minesweeper_sb || true",
		"start:server": "npm run start:db && ts-node-dev --project server/tsconfig.json  -- server/index --inspect",
		"test:server": "jest --config=server/test/jest.config.js",
		"start:web": "react-scripts start",
		"start": "concurrently 'npm:start:server' 'npm:start:web'",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"prettier": "prettier --write '**/*.{tsx,ts,jsx,js,json}'"
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@types/chai-http": "^4.2.0",
