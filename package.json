		"redux-devtools-extension": "^2.13.8",
		"ts-jest": "^26.1.4",
		"ts-node": "^8.10.2",
		"tslint": "^6.1.3",
		"tslint-config-prettier": "^1.18.0",
		"tslint-eslint-rules": "^5.4.0",
